<%- include('../partials/navbar.ejs') %>

<div class="container my-5">
  <h1 class="text-center fw-bold mb-4">Campaign List</h1>
  <% if (campaign.length > 0) { %>

  <div class="list-group card border-primary shadow-sm">
    <% campaign.forEach(campaign => { %>
    <a
      href="/campaigns/<%= campaign._id %>"
      class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
      style="border: 2px solid black"
    >
      <div>
        <strong>Campaign Name:</strong> <br /><%= campaign.campaignName %>
      </div>

      <span class="badge bg-primary rounded-pill">
        <%= campaign.balance %> BD / <%= campaign.GoalAmount %> BD</span
      >
    </a>
    <% }) %>
  </div>

  <% } else { %>
  <p class="text-center text-muted">No Campaign found.</p>
  <% } %>
</div>

<%- include('../partials/footer.ejs') %>
