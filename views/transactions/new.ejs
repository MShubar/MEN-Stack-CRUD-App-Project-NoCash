<%- include('../partials/navbar.ejs') %>

<div
  class="container d-flex justify-content-center align-items-center vh-100 fade-in"
>
  <div
    class="card shadow-lg p-4 scale-up"
    style="
      max-width: 500px;
      border-radius: 15px;
      background-color: #f9f9f9;
      animation: slide-in 0.6s ease-out;
    "
  >
    <% if (account) { %>
    <h1
      class="text-center mb-4 fw-bold text-primary"
      style="animation: fade-in 0.8s ease"
    >
      New Transaction
    </h1>
    <h3 class="text-center fw-bold text-secondary mb-3">
      Transfer from "<%= account.name %>"
    </h3>

    <form id="newTransaction" action="/transactions/new" method="POST">
      <!-- Username Input -->
      <div class="form-floating mb-3" style="animation: slide-up 0.8s ease-out">
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          placeholder="Username"
          required
        />
        <label for="username">Recipient Username</label>
      </div>

      <!-- Amount Input -->
      <div class="form-floating mb-3" style="animation: slide-up 1s ease-out">
        <input
          type="text"
          name="amount"
          id="amount"
          class="form-control"
          placeholder="Amount"
          required
        />
        <label for="amount">Transfer Amount</label>
      </div>

      <!-- Submit Button -->
      <button
        class="btn btn-primary w-100 py-2 fw-bold hover-bounce"
        type="submit"
        style="animation: bounce-in 1.2s ease"
      >
        Transfer
      </button>
    </form>
    <% } else { %>
    <h2 class="text-center text-danger">
      Please log in to create a transaction.
    </h2>
    <% } %>
  </div>
</div>
<%- include('../partials/footer.ejs') %>
