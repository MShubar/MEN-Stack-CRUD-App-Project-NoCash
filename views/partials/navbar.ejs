<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
  crossorigin="anonymous"
/>
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
  crossorigin="anonymous"
></script>

<nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
  <div class="container-fluid">
    <a class="navbar-brand fw-bold" href="/main-page"
      ><img
        style="height: 50px; width: 50px"
        src="/Images/NoCashLogo.png"
        alt="logo"
    /></a>
    
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <!-- Transactions Dropdown -->
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            href="#"
            id="transactionsDropdown"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Transactions
          </a>
          <ul class="dropdown-menu dropdown-menu-light">
            <li>
              <a class="dropdown-item" href="/transactions/new"
                >New Transactions</a
              >
            </li>
            <% if(account) { %>
            <li>
              <a class="dropdown-item" href="/transactions/history"
                >Transaction History</a
              >
            </li>
            <% } %>
            
          </ul>
        </li>

        <!-- Charity Dropdown -->
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            href="#"
            id="charityDropdown"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Charity
          </a>
          <ul class="dropdown-menu dropdown-menu-light">
            
            <li>
              <a class="dropdown-item" href="/charity/list">Charities List</a>
            </li>

            <% if (!account && !charity) { %>
            <li>
              <a class="dropdown-item" href="/charity/sign-up"
                >Sign Up Charity</a
              >
            </li>
            <li>
              <a class="dropdown-item" href="/charity/sign-in"
                >Sign In Charity</a
              >
            </li>
            <% } %>
          </li>
          
          </ul>
        </li>

        <!-- Campaign Dropdown -->
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            href="#"
            id="campaignDropdown"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Campaign
          </a>
          <ul class="dropdown-menu dropdown-menu-light">
            <li>
              <a class="dropdown-item" href="/campaigns/list">Campaigns List</a>
            </li>
            <% if (charity) { %>
            <li>
              <a class="dropdown-item" href="/campaigns/new">New Campaign</a>
            </li>
            <% } %>
          </ul>
        </li>
      </ul>

      <ul class="navbar-nav ms-auto align-items-center">
        <% if (account) { %>
        <li class="nav-item">
          <span class="nav-link text-light fw-bold"
            ><%= account.name %>: <%= account.balance %>BD</span
          >
        </li>
        <li class="nav-item">
          <a class="btn btn-light ms-2" href="/account/sign-out">Sign Out</a>
        </li>

        <% } else if (charity) { %>
        <li class="nav-item">
          <span class="nav-link text-light fw-bold"
            ><%= charity.charityName %>: <%= charity.balance %>BD</span
          >
        </li>
        <li class="nav-item">
          <a class="btn btn-light ms-2" href="/charity/sign-out">Sign Out</a>
        </li>
        <% } else if (!account && !charity) { %>
        <li class="nav-item">
          <a class="btn btn-light ms-2" href="/account/sign-in">Sign In</a>
        </li>
        <li class="nav-item">
          <a class="btn btn-outline-light ms-2" href="/account/sign-up"
            >Sign Up</a
          >
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
