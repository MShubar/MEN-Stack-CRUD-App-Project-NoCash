<%- include('../partials/navbar.ejs') %>

<div class="container my-5">
  <h1 class="text-center fw-bold mb-4">Charity List</h1>
  <% if (charity.length > 0) { %>

  <div
    class="list-group card border-primary shadow-sm"
    style="border: 2px solid black"
  >
    <% charity.forEach(charity => { %>
    <a
      href="/charity/<%= charity._id %>"
      class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
    >
      <div>
        <strong>Charity Name:</strong> <br /><%= charity.charityName %><br />
      </div>
      <span class="badge bg-primary rounded-pill"> View Campaigns </span>
    </a>
    <% }) %>
  </div>
  <% } else { %>
  <p class="text-center text-muted">No charity found.</p>
  <% } %>
</div>
<%- include('../partials/footer.ejs') %>
